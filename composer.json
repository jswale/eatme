{
    "name"        : "jswale/eatme",
    "type"        : "library",
    "description" : "A recipie management website",
    "keywords"    : ["framework"],
    "license"     : "MIT",
    "authors"     : [
        {
            "name"  : "Jonathan Swale",
            "email" : "jonathan.swale@gmail.com"
        }
    ],
    
    "require": {
        "php"                   : ">=5.5.9",
        "doctrine/dbal"         : "~2.5.4",
        "doctrine/orm"					: "~2.5.4",
        "monolog/monolog"       : "~1.21",
        "silex/silex"           : "~2.0",
        "silex/web-profiler"    : "~2.0",
        "symfony/config"        : "~3.1",
        "symfony/console"       : "~3.1",
        "symfony/finder"        : "~3.1",
        "symfony/form"          : "~3.1",
        "symfony/security"      : "~3.1",
        "symfony/translation"   : "~3.1",
        "symfony/twig-bridge"   : "~3.1",
        "symfony/validator"     : "~3.1",
        "symfony/yaml"          : "~3.1",
        "symfony/security-csrf" : "~3.1",
        "twig/twig"             : "~1.24",
        "twitter/bootstrap"     : "~3.3.6",
        "components/jquery"			: "~3.1",
        "symfony/doctrine-bridge": "~3.1"
    },
    "require-dev": {
        "symfony/browser-kit"   : "~3.1",
        "symfony/css-selector"  : "~3.1",
        "symfony/dom-crawler"   : "~3.1"
    },
    "scripts": {
        "post-install-cmd": "App\\Composer\\Script::install",
        "post-update-cmd": "App\\Composer\\Script::install",
        "copyBoostrap": [
            "mkdir -p web/vendor/bootstrap",
            "cp -r vendor/twitter/bootstrap/dist/* web/vendor/bootstrap"
        ],
        "copyJquery": [
            "mkdir -p web/vendor/jquery",
            "cp -r vendor/components/jquery/*.js web/vendor/jquery"
        ],
        "compile": [
            "rm -rf web/vendor/",
            "@copyJquery",
            "@copyBoostrap"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App"
        }
    }
}
